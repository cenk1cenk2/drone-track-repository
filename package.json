{
  "name": "drone-track-repository",
  "version": "1.0.0",
  "description": "Tracking a parent repository and tagging this with the new version if required.",
  "main": "index.js",
  "repository": "https://github.com/cenk1cenk2/drone-track-repository",
  "author": "Cenk Kılıç <cenk@kilic.dev>",
  "license": "MIT",
  "scripts": {
    "lint": "prettier --write src/ && eslint --ext .json,.ts,.js --fix src/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "src/*.{ts,js,json}": [
      "prettier --write",
      "eslint --ext .json,.ts,.js --fix"
    ]
  },
  "devDependencies": {
    "@cenk1cenk2/eslint-config": "*",
    "commitizen": "*",
    "cz-conventional-changelog": "*",
    "eslint": "*",
    "husky": "*",
    "lint-staged": "*"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}